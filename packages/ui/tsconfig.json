{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$providers": ["providers"],
      "$components": ["components"],
      "$components/*": ["components/*"],
      "$atoms": ["atoms"],
      "$theme": ["theme"],
      "$theme/*": ["theme/*"],
      "$styled": ["components/styled"],
      "$styled/*": ["components/styled/*"],
      "$types": ["types"],
      "$hooks": ["hooks"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
