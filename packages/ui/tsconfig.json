{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$providers": ["providers"],
      "$components": ["components"],
      "$components/*": ["components/*"],
      "$atoms": ["atoms"],
      "$atoms/*": ["atoms/*"],
      "$theme": ["theme"],
      "$theme/*": ["theme/*"],
      "$types": ["types"],
      "$types/*": ["types/*"],
      "$hooks": ["hooks"],
      "$hooks/*": ["hooks/*"],
      "$icons": ["icons"],
      "$icons/*": ["icons/*"],
      "$icons/base": ["icons/Base"] 
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
