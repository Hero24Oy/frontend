{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$providers": ["providers"],
      "$components": ["components"],
      "$components/*": ["components/*"],
      "$atoms": ["components/atoms"],
      "$atoms/*": ["components/atoms/*"],
      "$theme": ["theme"],
      "$theme/*": ["theme/*"],
      "$types": ["types"],
      "$hooks": ["hooks"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
