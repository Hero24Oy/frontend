{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "$providers": ["src/providers"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$atoms": ["src/components/atoms"],
      "$atoms/*": ["src/components/atoms/*"],
      "$molecules": ["src/components/molecules"],
      "$molecules/*": ["src/components/molecules/*"],
      "$theme": ["src/theme"],
      "$theme/*": ["src/theme/*"],
      "$types": ["src/types"],
      "$types/*": ["src/types/*"],
      "$hooks": ["src/hooks"],
      "$hooks/*": ["src/hooks/*"],
      "$icons": ["src/icons"],
      "$icons/*": ["src/icons/*"],
      "$styled": ["src/components/styled"],
      "$styled/*": ["src/components/styled/*"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
