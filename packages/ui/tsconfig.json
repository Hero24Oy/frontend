{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$providers": ["providers"],
      "$components": ["components"],
      "$components/*": ["components/*"],
      "$theme": ["theme"],
      "$theme/*": ["theme/*"],
      "$types": ["types"],
      "$types/*": ["types/*"],
      "$hooks": ["hooks"],
      "$atoms": ["components/atoms"],
      "$atoms/*": ["components/atoms/*"],
      "$molecules": ["components/molecules"],
      "$molecules/*": ["components/molecules/*"],
      "$organisms": ["components/organisms"],
      "$organisms/*": ["components/organisms/*"],
      "$styled": ["components/styled"],
      "$styled/*": ["components/styled/*"],
      "$icons": ["icons"],
      "$icons/*": ["icons/*"],
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
