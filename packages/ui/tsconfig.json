{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$providers": ["providers"],
      "$components": ["components"],
      "$components/*": ["components/*"],
      "$atoms": ["components/atoms"],
      "$atoms/*": ["components/atoms/*"],
      "$theme": ["theme"],
      "$theme/*": ["theme/*"],
      "$types": ["types"],
      "$types/*": ["types/*"],
      "$hooks": ["hooks"],
      "$hooks/*": ["hooks/*"],
      "$icons": ["icons"],
      "$icons/*": ["icons/*"],
      "$styled": ["styled"],
      "$styled/*": ["styled/*"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
