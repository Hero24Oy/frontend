{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$common": ["index"],
      "$common/modules": ["modules/index"],
      "$common/modules/*": ["modules/*"],
      "$common/types": ["types/index"],
      "$common/core": ["core/index"],
      "$common/core/*": ["core/*"],
      "$configs": ["configs/index"],
      "$ui/providers": ["@hero24/ui/src/providers"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
