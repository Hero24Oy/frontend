{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$assets": ["assets"],
      "$assets/*": ["assets/*"],
      "$modules": ["modules/index"],
      "$modules/*": ["modules/*"],
      "$core": ["core/index"],
      "$core/*": ["core/*"],
      "$types": ["types/index"],
      "$configs": ["configs/index"],
      "$ui/providers": ["@hero24/ui/src/providers"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
