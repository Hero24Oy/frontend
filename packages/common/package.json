{
  "private": true,
  "name": "@hero24/common",
  "version": "1.0.0",
  "repository": "https://github.com/Helpdor/frontend/hero24-common",
  "license": "private",
  "engines": {
    "node": "^18.18",
    "npm": "^9.8"
  },
  "watch": {
    "update-dependency-on-this": {
      "patterns": [
        "."
      ],
      "ignore": "node_modules",
      "extensions": "js,ts,tsx,json",
      "runOnChangeOnly": false,
      "clearBuffer": true
    }
  },
  "scripts": {
    "pretty": "prettier --write . --log-level warn",
    "lint": "eslint . --fix --rule \"react-hooks/exhaustive-deps: off\"",
    "watch": "npm-watch",
    "update-app-hero-dependencies": "cd ../app-hero && npm run copy-common",
    "update-app-customer-dependencies": "cd ../app-customer && npm run copy-common",
    "update-ui-lib-dependencies": "cd ../ui-library && npm run copy-common",
    "update-dependency-on-this": "echo 'Start update' && npm run update-app-hero-dependencies && npm run update-app-customer-dependencies && npm run update-ui-lib-dependencies"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^7.3.6",
    "@types/lodash": "^4.14.199",
    "@types/react": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "expo": "^49.0.11",
    "npm-watch": "^0.11.0",
    "prettier": "^3.0.3",
    "semver": "^7.5.4",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@apollo/client": "^3.8.4",
    "@react-native-async-storage/async-storage": "^1.19.3",
    "expo-apple-authentication": "^6.1.2",
    "expo-auth-session": "~5.0.2",
    "expo-constants": "^14.4.2",
    "expo-crypto": "^12.6.0",
    "expo-device": "^5.6.0",
    "expo-image-picker": "^14.5.0",
    "expo-notifications": "^0.20.1",
    "firebase": "^9.23.0",
    "graphql-ws": "^5.14.0",
    "hero24-types": "^0.2.2",
    "i18next": "^23.5.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-native": "^0.72.5",
    "yup": "^1.3.1",
    "zustand": "^4.4.3"
  }
}
