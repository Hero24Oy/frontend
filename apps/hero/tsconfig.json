{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$/*": ["*"],
      "$app": ["app/*"],
      "$core": ["core"],
      "$core/*": ["core/*"],
      "$configs": ["configs"],
      "$configs/*": ["configs/*"],
      "$modules": ["modules"],
      "$modules/*": ["modules/*"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
