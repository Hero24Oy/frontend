{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$app": ["src/app/*"],
      "$core": ["src/core/index"],
      "$configs": ["src/configs/index"],
      "$modules/*": ["src/modules/*"],
      "$modules": ["src/modules/index"],
      "$/*": ["*"],
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
