{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$/*": [
        "*"
      ],
      "$app": [
        "app/*"
      ],
      "$core": [
        "core/index"
      ],
      "$configs": [
        "configs/index"
      ],
      "$modules": [
        "modules/index"
      ]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
