{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$app": ["app/*"],
      "$core": ["core/index"],
      "$configs": ["configs/index"],
      "$modules": ["modules/index"],
      "$modules/*": ["modules/*"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": [
    "src",
    ".expo/types/**/*.ts",
    "*env.d.ts",
    "index.ts",
    "app.config.ts",
    "expo-env.d.ts"
  ]
}
