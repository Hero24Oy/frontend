{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$app": ["app/*"],
      "$core": ["core/index"],
      "$configs": ["configs/index"],
      "$modules": ["modules/index"],
      /*
        TODO: Delete next aliases after create npm package
      */
      /*
        Common-submodule aliases
      */
      "$common/modules": ["@hero24/common/src/modules/index"],
      "$common/types": ["@hero24/common/src/types/index"],
      "$common/core": ["@hero24/common/src/types/index"],
      /*
        Ui-library-submodule aliases
      */
      "$ui-library/providers": ["@hero24/ui/src/providers"],
      /*
        The root alias must be after all then to work correctly
      */
      "$/*": ["*"]
    }
  },
  "extends": "@hero24/configs/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": [
    "src",
    ".expo/types/**/*.ts",
    "*env.d.ts",
    "index.ts",
    "app.config.ts"
  ]
}
