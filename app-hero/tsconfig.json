{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$app": ["app/*"],
      "$core": ["core/index"],
      "$configs": ["configs/index"],
      "$modules": ["modules/index"],
      "$ui-library": ["@hero24/ui-library/index"], // delete alias after create npm package
      "$common": ["@hero24/common-library/index"], // delete alias after create npm package
      "$/*": ["*"]
    }
  },
  "extends": "./src/@hero24/common-library/common-tsconfig.json",
  "exclude": ["node_modules", "dist", "@hero24"],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
