{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$app": ["app/*"],
      "$core": ["core/index"],
      "$configs": ["configs/index"],
      "$modules": ["modules/index"],
      "$/*": ["*"],
      /*
        Delete next aliases after create npm package
       */
      "$ui-library": ["@hero24/ui-library/index"],
      "$ui-library/providers": ["@hero24/ui-library/src/providers"],
      "$common": ["@hero24/common-library/index"],
      "$common/modules": ["@hero24/common-library/src/modules/index"],
      "$common/types": ["@hero24/common-library/src/types/index"]
    }
  },
  "extends": "./src/@hero24/common-library/common-tsconfig.json",
  "exclude": ["node_modules", "dist", "@hero24"],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
