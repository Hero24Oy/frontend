{
  "private": true,
  "name": "frontend",
  "version": "1.0.0",
  "repository": "https://github.com/Helpdor/frontend",
  "license": "private",
  "engines": {
    "node": "^18.18",
    "npm": "^9.8"
  },
  "scripts": {
    "prepare": "husky install",
    "install-common": "cd hero24-common && npm ci",
    "install-ui-library": "cd ui-library && npm ci",
    "install-app-hero": "cd app-hero && npm ci",
    "install-app-customer": "cd app-customer && npm ci",
    "install-all": "npm ci && npm run install-common && npm run install-ui-library && npm run install-app-hero && npm run install-app-customer"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turborepo": "^0.0.1"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
