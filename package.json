{
  "private": true,
  "name": "frontend",
  "version": "1.0.0",
  "repository": "https://github.com/Helpdor/frontend",
  "license": "private",
  "engines": {
    "node": "^18.18",
    "npm": "^9.8"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo build",
    "build:ui": "cd packages/ui && npm run build && cd ../../ ",
    "dev": "turbo dev",
    "dev:hero": "cd apps/hero && npm run watch",
    "dev:customer": "cd apps/customer && npm run watch",
    "lint": "turbo lint",
    "postinstall": "npm run build:ui && npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.15"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "react-hook-form": "^7.47.0"
  }
}
