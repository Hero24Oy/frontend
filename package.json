{
  "private": true,
  "name": "frontend",
  "version": "1.0.3",
  "repository": "https://github.com/Helpdor/frontend",
  "license": "private",
  "engines": {
    "node": "^18.18"
  },
  "packageManager": "yarn@4.0.0",
  "scripts": {
    "prepare": "husky install",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:hero": "cd apps/hero && yarn watch",
    "dev:customer": "cd apps/customer && yarn watch",
    "lint": "turbo lint",
    "postinstall": "yarn build",
    "reinstall-deps": "rm -rf ./**/node_modules && yarn"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.15"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
