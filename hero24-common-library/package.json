{
  "private": true,
  "name": "app-hero",
  "version": "1.0.0",
  "repository": "https://github.com/Helpdor/frontend/hero24-common-ui-library",
  "license": "private",
  "engines": {
    "node": "^18.18",
    "npm": "^9.8"
  },
  "watch": {
    "update:dependents": {
      "patterns": [
        "."
      ],
      "ignore": "node_modules",
      "extensions": "js,ts,tsx,json",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "pretty": "prettier --write . --log-level warn",
    "lint": "eslint . --fix --rule \"react-hooks/exhaustive-deps: off\"",
    "watch": "npm-watch",
    "update:app-hero": "cd ../app-hero && npm run copy:common",
    "update:app-customer": "cd ../app-customer && npm run copy:common",
    "update:dependents": "echo 'Start update hero24-common' && npm run update:app-hero && npm run update:app-customer"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^7.3.6",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "expo": "^49.0.11",
    "npm-watch": "^0.11.0",
    "prettier": "^3.0.3",
    "semver": "^7.5.4",
    "typescript": "^5.1.3"
  }
}
