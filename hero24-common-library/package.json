{
  "private": true,
  "name": "app-hero",
  "version": "1.0.0",
  "repository": "https://github.com/Helpdor/frontend/hero24-common-ui-library",
  "license": "private",
  "engines": {
    "node": "^18.18",
    "npm": "^9.8"
  },
  "watch": {
    "update:dependents": {
      "patterns": [
        "."
      ],
      "ignore": "node_modules",
      "extensions": "js,ts,tsx,json",
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "pretty": "prettier --write . --log-level warn",
    "lint": "eslint . --fix --rule \"react-hooks/exhaustive-deps: off\"",
    "watch": "npm-watch",
    "copy:ui-library": "mkdir -p ./src/@hero24/ui-library && rm -r -f ./src/@hero24/ui-library/src && cp -R ../hero24-ui-library/src ./src/@hero24/ui-library/src",
    "update:local-submodules": "npm run copy:ui-library",
    "update:app-hero": "cd ../app-hero && npm run copy:common && npm run copy:ts-config",
    "update:app-customer": "cd ../app-customer && npm run copy:common && npm run copy:ts-config",
    "update:dependents": "echo 'Start update hero24-common' && npm run update:app-hero && npm run update:app-customer"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^7.3.6",
    "@gluestack-ui/themed": "^1.0.1",
    "@hookform/resolvers": "^3.3.1",
    "@types/react": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "expo": "^49.0.11",
    "expo-router": "^2.0.8",
    "npm-watch": "^0.11.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-combine-providers": "^0.9.6",
    "react-hook-form": "^7.47.0",
    "react-native": "^0.72.5",
    "react-native-safe-area-context": "^4.7.2",
    "semver": "^7.5.4",
    "typescript": "^5.1.3",
    "yup": "^1.3.2"
  }
}
